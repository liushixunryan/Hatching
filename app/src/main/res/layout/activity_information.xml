<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    tools:context=".InformationActivity">

    <LinearLayout
        android:id="@+id/Text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="30px"
            android:text="基本信息"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#0A7F78"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/touxiang"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/Text_title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
     />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mima"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/touxiang"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:gravity="center"
            android:inputType="text"
            android:textSize="18dp"
            android:hint="请输入昵称"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nicheng"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/mima"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:gravity="center"
            android:inputType="text"
            android:textSize="18dp"
            android:hint="请输入出生年月"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/sex"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/nicheng"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:text="我是男生"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_marginLeft="50dp"
            android:text="我是女生"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:onClick="finash"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#0A7F78"
            android:gravity="center"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </LinearLayout>

</RelativeLayout>